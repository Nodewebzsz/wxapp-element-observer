.header {
  font-size: 40rpx;
  color: #4d4f53;
  height: 200rpx;
}
.content {
}
.observer {
  height: 1rpx;
}
.text-view {
  height: 50rpx;
}

.item {
  padding: 10rpx 10rpx 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
  overflow: hidden;
}
.name {
  font-size: 32rpx;
  color: #333333;
  line-height: 52rpx;
  margin-bottom: 20rpx;
}
.pic {
  width: 300rpx;
  height: 200rpx;
}
.pic image {
  width: 300rpx;
  height: 200rpx;
}
.info {
  flex: 1;
  color: #666;
  position: relative; 
  padding-left: 40rpx;
}
.info .intro {
  height: 160rpx;
  overflow: hidden;
  font-size: 28rpx;
}
.info .link {
  color: #999;
  font-size: 20rpx;
  position: absolute;
  position: absolute;
  right: 0;
  bottom: 0;
}
.item-content {
  display: flex;
}